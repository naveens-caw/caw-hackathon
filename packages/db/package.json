{
  "name": "@caw-hackathon/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config vitest.config.mjs --pool=threads --poolOptions.threads.singleThread",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "tsx src/migrate.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@caw-hackathon/eslint-config": "workspace:*",
    "@caw-hackathon/tsconfig": "workspace:*",
    "@types/node": "^24.9.1",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  }
}
